{
  "mcpServers": {
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "description": "Library documentation search"
    },
    "sentry": {
      "command": "npx",
      "args": ["-y", "@sentry/mcp-server"],
      "description": "Error tracking"
    },
    "linear": {
      "command": "npx",
      "args": ["-y", "linear-mcp"],
      "env": {
        "LINEAR_API_KEY": "${LINEAR_API_KEY}"
      },
      "description": "Issue tracking"
    },
    "claude-flow": {
      "command": "npx",
      "args": ["-y", "claude-flow@alpha", "mcp", "start", "--transport", "http", "--port", "3001"],
      "env": {
        "AGENTDB_ENABLED": "false",
        "CLAUDE_FLOW_MODE": "legacy"
      },
      "description": "AI orchestration (safe mode)"
    }
  }
}
