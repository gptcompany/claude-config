# Auto-sync planning artifacts to GitHub Issues/Milestones
# Generated by Universal Validation Framework
# Project: {{ project_name }}

name: Sync Planning

on:
  push:
    paths:
      - '.planning/**'
{% if domain == 'workflow' or domain == 'data' %}
      - 'tasks.md'
{% endif %}
  workflow_dispatch:  # Allow manual trigger

jobs:
  sync:
    uses: gptcompany/.github/.github/workflows/_reusable-sync-planning.yml@main
    with:
      framework: 'auto'
      create-project: true
{% if domain == 'trading' %}
      sync-todos: true  # Trading projects often have urgent todos
{% else %}
      sync-todos: false
{% endif %}
