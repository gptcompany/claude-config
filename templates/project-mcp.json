{
  "mcpServers": {
    "linear": {
      "command": "/home/sam/.claude/scripts/linear-mcp-wrapper.sh",
      "args": []
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"]
    },
    "serena": {
      "command": "serena",
      "args": ["start-mcp-server", "--context", "ide-assistant"]
    },
    "wolframalpha": {
      "command": "node",
      "args": ["/media/sam/1TB/mcpservers/wolframalpha-llm-mcp/build/index.js"],
      "env": {
        "WOLFRAM_LLM_APP_ID": "VYR43J-GW3TWJ9G3K"
      }
    },
    "download-mcp": {
      "command": "python3",
      "args": ["/media/sam/1TB/mcpservers/mcp-download/bridging_download_mcp.py"]
    },
    "claude-flow": {
      "command": "npx",
      "args": ["-y", "claude-flow@latest", "mcp", "start"]
    },
    "grafana": {
      "command": "bash",
      "args": [
        "-c",
        "/home/sam/.local/bin/dotenvx run -f /media/sam/1TB/.env -- /home/sam/go/bin/mcp-grafana"
      ]
    },
    "n8n-mcp": {
      "command": "bash",
      "args": [
        "-c",
        "/home/sam/.local/bin/dotenvx run -f /media/sam/1TB/.env -- npx -y n8n-mcp"
      ],
      "env": {
        "N8N_API_URL": "https://n8nubuntu.princyx.xyz/",
        "MCP_MODE": "stdio",
        "LOG_LEVEL": "warning"
      }
    },
    "firecrawl-mcp": {
      "command": "bash",
      "args": [
        "-c",
        "/home/sam/.local/bin/dotenvx run -f /media/sam/1TB/.env -- npx -y firecrawl-mcp"
      ]
    },
    "sentry": {
      "command": "bash",
      "args": [
        "-c",
        "/home/sam/.local/bin/dotenvx run -f /media/sam/1TB/.env -- bash -c 'npx -y @sentry/mcp-server --access-token=$SENTRY_AUTH_TOKEN'"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp@latest"]
    }
  }
}